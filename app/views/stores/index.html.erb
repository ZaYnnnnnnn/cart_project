<h1> Store listing page </h1>

<table>
 <thead>
  <tr>
    <th>Store Title</th>
    <th colspan="3">Actions</th>
  </tr>
 </thead>


<tbody>
<% @stores.each do |store| %>
  <tr>
    <td><%= store.title %> </td>
    <td><%= link_to 'Show', store_path(store) %></td>
    <td><%= link_to 'Edit', edit_store_path(store) %></td>
    <td><%= link_to 'Remove', store_path(store), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
 <P>
 <P>
 <%= link_to "Create new Store" , new_store_path, :class=> "btn btn-danger" %>
 </p>
 </p>