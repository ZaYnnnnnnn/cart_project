<h1> Products listing page </h1>
<table>
 <thead>
  <tr>
    <th>Product Title</th>
    <th>Product Price</th>
    <th colspan="3">Actions</th>
  </tr>
 </thead>


<tbody>
<% @product.each do |product| %>
  <tr>
    <td><%= product.title %> </td>
    <td><%= product.price %> </td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Remove', product_path(product), method: :delete, data: { confirm: "Are you sure?" } %></td>

    
    </tr>
    <% end %>
  </tbody>
 </table>
 <P>
 <P>
<%= link_to "Create new Product" , new_product_path, :class=> "btn btn-danger" %>
 </p>
 </p>