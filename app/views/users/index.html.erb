<h1> Users listing page </h1>
<table>
 <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </tr>
 </thead>


<tbody>
<% @user.each do |user| %>
  <tr>
    <td><%= user.username %> </td>
    <td><%= user.email %> </td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Remove', user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>

    
    </tr>
    <% end %>
  </tbody>
 </table>
 <P>
 <P>
<%= link_to "Create new user" , new_user_path, :class=> "btn btn-danger" %>
 </p>
 </p>