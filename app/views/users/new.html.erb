
<h1> Create new User </h1>
<% if @user.errors.any? %>
<h3> Error </h3>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<%= form_with scope: :user, url: users_path, local: true do |f| %>

  <p>
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </p>
    <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Create", :class=> "btn btn-danger" %>
  </p>

<% end %>