<h1> Create New Category </h1>
<% if @categories.errors.any? %>
<h3> Error </h3>
  <ul>
  <% @categories.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<%= form_with scope: :category, url: categories_path, local: true do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit "Create", :class=> "btn btn-danger" %>
  </p>

<% end %>